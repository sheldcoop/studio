
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "displayName", "email"]
    },
    "CommunityPost": {
      "title": "Community Post",
      "description": "A single post in the community forum.",
      "type": "object",
      "properties": {
        "topic": {
          "type": "string",
          "description": "The title or topic of the discussion post."
        },
        "content": {
            "type": "string",
            "description": "The main content of the post."
        },
        "author": {
          "$ref": "#/entities/UserProfile"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the post was created."
        },
        "replies": {
            "type": "number",
            "description": "The number of replies to the post."
        },
        "views": {
            "type": "number",
            "description": "The number of views the post has."
        }
      },
      "required": ["topic", "content", "author", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile information."
    },
    "/communityPosts": {
      "schema": {
        "$ref": "#/entities/CommunityPost"
      },
      "description": "Collection of all posts in the community forum."
    }
  }
}
